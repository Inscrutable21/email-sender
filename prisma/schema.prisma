datasource db { 
  provider = "mongodb"
  url      = env("DATABASE_URL")
}

enum EmailStatus {
  PENDING
  SENT
  FAILED
}

model Email {
  id           String      @id @default(auto()) @map("_id") @db.ObjectId
  emailAddress String      @unique
  name         String?
  company      String?
  position     String?
  status       EmailStatus @default(PENDING)
  errorMessage String?
  createdAt    DateTime?   @default(now())
  sentAt       DateTime?
}